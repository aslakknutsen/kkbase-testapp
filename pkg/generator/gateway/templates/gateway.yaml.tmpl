apiVersion: gateway.networking.k8s.io/v1
kind: Gateway
metadata:
  name: {{ .Name }}-gateway
  namespace: default
spec:
  gatewayClassName: openshift-default
  listeners:
{{- if .NeedsHTTP }}
  - name: http
    protocol: HTTP
    port: 80
{{- end }}
{{- if .NeedsHTTPS }}
  - name: https
    protocol: HTTPS
    port: 443
    tls:
      mode: Terminate
      certificateRefs:
      - name: gateway-tls-cert
{{- end }}

