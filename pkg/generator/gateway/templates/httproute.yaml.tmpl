apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: {{ .Name }}
  namespace: {{ .Namespace }}
spec:
  parentRefs:
  - name: {{ .GatewayName }}-gateway
    namespace: default
{{- if .Hostname }}
  hostnames:
  - {{ .Hostname }}
{{- end }}
  rules:
{{- range .Rules }}
  - matches:
    - path:
        type: PathPrefix
        value: {{ .Path }}
    backendRefs:
    - name: {{ .BackendName }}
      namespace: {{ .BackendNamespace }}
      port: {{ .BackendPort }}
{{- end }}

