{{- range $i, $grant := .Grants -}}
{{- if $i }}
---
{{ end -}}
apiVersion: gateway.networking.k8s.io/v1beta1
kind: ReferenceGrant
metadata:
  name: {{ $grant.Name }}
  namespace: {{ $grant.Namespace }}
spec:
  from:
  - group: gateway.networking.k8s.io
    kind: HTTPRoute
    namespace: default
  - group: gateway.networking.k8s.io
    kind: GRPCRoute
    namespace: default
  to:
  - group: ""
    kind: Service
{{ end -}}

