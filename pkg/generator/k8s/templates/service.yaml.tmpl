apiVersion: v1
kind: Service
metadata:
  name: {{ .Name }}
  namespace: {{ .Namespace }}
  labels:
{{- range $key, $value := .Labels }}
    {{ $key }}: {{ $value }}
{{- end }}
spec:
  type: ClusterIP
  selector:
    app: {{ .Name }}
  ports:
{{- range .Ports }}
  - name: {{ .Name }}
    port: {{ .Port }}
    targetPort: {{ .TargetPort }}
    protocol: {{ .Protocol }}
{{- end }}

